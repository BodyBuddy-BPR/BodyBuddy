<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BodyBuddy.Views.StartupTest.StartupTestPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControls="clr-namespace:BodyBuddy.CustomControls"
    xmlns:model="clr-namespace:BodyBuddy.Models"
    xmlns:viewModel="clr-namespace:BodyBuddy.ViewModels.StartupTest"
    Title="StartupTest"
    x:DataType="viewModel:StartupTestViewModel">

    <Grid
        Margin="20,10"
        RowDefinitions="Auto, *, Auto"
        RowSpacing="15">
        <Label
            Grid.Row="0"
            Style="{StaticResource TitleLabel}"
            Text="{Binding QuestionaireText}" />

        <VerticalStackLayout
            Grid.Row="1"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <!--  Name  -->
            <customControls:CustomEntry
                IsVisible="{Binding IsNameVisible}"
                Placeholder="Enter Name"
                Style="{StaticResource StartupInputField}"
                Text="{Binding Name}" />

            <!--  Gender  -->
            <StackLayout Padding="20" IsVisible="{Binding IsGenderVisible}">
                <CollectionView x:Name="genderListView" ItemsSource="{Binding GenderList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <!--  Use the index of the item to bind to the correct item in SelectedStates  -->
                                <CheckBox IsChecked="{Binding Source={x:Reference genderListView}, Path=BindingContext.GenderSelectedStates[index]}" />
                                <Label Text="{Binding .}" VerticalOptions="Center" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <!--  TODO - SEBT Numeric Values Only  -->
            <!--  Weight  -->
            <customControls:CustomEntry
                IsVisible="{Binding IsWeightVisible}"
                Keyboard="Numeric"
                Placeholder="Enter Weight"
                Style="{StaticResource StartupInputField}" />

            <!--  Height  -->
            <customControls:CustomEntry
                IsVisible="{Binding IsHeightVisible}"
                Keyboard="Numeric"
                Placeholder="Enter Height"
                Style="{StaticResource StartupInputField}" />

            <!--  Birthday  -->
            <!--  TODO SEBT -> Date Picker here  -->
            <DatePicker
                Date="{Binding SelectedDate}"
                HorizontalOptions="Center"
                IsVisible="{Binding IsBirthdayVisible}"
                MaximumDate="{Binding MaxDate}"
                MinimumDate="{Binding MinDate}"
                VerticalOptions="Center" />

            <!--  Active  -->
            <StackLayout Padding="20" IsVisible="{Binding IsActiveVisible}">
                <CollectionView x:Name="activityListView" ItemsSource="{Binding ActivityList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <!--  Use the index of the item to bind to the correct item in SelectedStates  -->
                                <CheckBox IsChecked="{Binding Source={x:Reference activityListView}, Path=BindingContext.ActivitySelectedStates[index]}" />
                                <Label Text="{Binding .}" VerticalOptions="Center" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <!--  Passive Calorie Burn  -->
            <Label
                HorizontalOptions="Center"
                IsVisible="{Binding IsPassiveCalorieBurnVisible}"
                Style="{StaticResource TitleLabel}"
                Text="Passive Calorie Burn"
                VerticalOptions="Center" />

            <!--  Goal  -->
            <StackLayout Padding="20" IsVisible="{Binding IsGoalVisible}">
                <CollectionView x:Name="goalListView" ItemsSource="{Binding GoalList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <!--  Use the index of the item to bind to the correct item in SelectedStates  -->
                                <CheckBox IsChecked="{Binding Source={x:Reference goalListView}, Path=BindingContext.GoalSelectedStates[index]}" />
                                <Label Text="{Binding .}" VerticalOptions="Center" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>


        </VerticalStackLayout>

        <Button
            Grid.Row="2"
            Command="{Binding NextButtonCommand}"
            Style="{StaticResource AddButton}"
            Text="Next!" />

    </Grid>
</ContentPage>