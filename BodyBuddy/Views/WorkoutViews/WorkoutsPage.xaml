<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BodyBuddy.Views.WorkoutViews.WorkoutsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:BodyBuddy.Models"
    xmlns:viewModel="clr-namespace:BodyBuddy.ViewModels.WorkoutViewModels"
    Title="{Binding Title}"
    x:DataType="viewModel:WorkoutViewModel">

    <Grid
        Margin="20,10"
        RowDefinitions="Auto, *"
        RowSpacing="15">
        <!--  Title  -->
        <Label
            Grid.Row="0"
            Style="{StaticResource TitleLabel}"
            Text="Workout Plans" />

        <!--  Workouts to show  -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Workouts}">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Workout">
                    <Frame
                        BackgroundColor="{StaticResource Primary}"
                        HeightRequest="80"
                        Style="{StaticResource CardView}">
                        <Label
                            Margin="20"
                            Style="{StaticResource LargeLabel}"
                            Text="{Binding Name}"
                            VerticalOptions="Center" />

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:WorkoutViewModel}}, Path=GoToWorkoutDetailsCommand}" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>