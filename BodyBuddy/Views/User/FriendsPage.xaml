<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BodyBuddy.Views.User.FriendsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:BodyBuddy.ViewModels.User"
    Title="FriendsPage"
    x:DataType="viewModel:FriendsViewModel">

    <Grid
        Margin="20,10,20,15"
        RowDefinitions="Auto, *, Auto"
        RowSpacing="15">

        <!--  Title  -->
        <Label
            Grid.Row="0"
            Style="{StaticResource TitleLabel}"
            Text="Friends" />


        <Entry Grid.Row="1" Text="{Binding SearchQuery}" />
        <Button Grid.Row="2" Command="{Binding AddNewFriendCommand}" Text="Add Friend" />

    </Grid>





</ContentPage>